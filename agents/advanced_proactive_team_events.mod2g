	if true then comBasic.
	
	if true then comBlocks.
	if true then comVisited.
	
	% Update aheadState
	forall (Agt).sent( msg(holding(BlockID)) ) do insert( holding(Agt, BlockID) ).
	forall (Agt).sent( msg(noHolding(BlockID)) ), bel( not(holding(Agt, OtherBlock)) ) do 
